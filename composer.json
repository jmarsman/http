{
  "name": "symplely/http",
  "description": "PSR-7 implementation using yield, coroutines, async and await",
  "keywords": ["psr-7", "http", "request", "coroutine", "asynchronous"],
  "license": "MIT",
  "homepage": "https://github.com/symplely/http",
  "type": "library",
  "authors": [
    {
      "name": "Lawrence Stubbs",
      "email": "lstubbs@techno.express"
    }
  ],
  "autoload": {
    "psr-4": {
      "Async\\Http\\": "Http/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Async\\Tests\\": "tests/"
    }
  },
  "provide": {
    "psr/http-client-implementation" : "^1.0",
    "psr/http-factory-implementation": "^1.0",
    "psr/http-message-implementation": "^1.0"
  },
  "require": {
    "php": "^7.0",    
    "psr/http-client" : "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": ">5.7"
  }
}
